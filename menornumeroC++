#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
void main(){
  int N, p, c, menor;
  cout<<"Ingrese numero entero"<<endl;
  cin>>N;
  p=0;
  c=0;
  menor=9;
  while (N!=0){
    x=N%10;
    if (x<=menor){
      menor=x;
      p=c+1;
    }
    N=(N-x)/10;
    c=c+1;
  }
  cout<<"El menor numero es: "<<menor<<endl;
  cout<<"Su posicion es: "<<p;
  getch();
}
